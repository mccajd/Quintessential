resource_name = "ShowNodeMenuButton"
script/source = "extends BeaconButton

var beaconNodeMenu = null
# Called when the node enters the scene tree for the first time.
func _ready():
	beaconNodeMenu = get_parent().get_node(\"BeaconNodeMenu\")


# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(delta):
	if (hovered && Input.is_action_just_pressed(\"select\")):
		$AnimatedSprite2D.play(\"depressed\")
		beaconNodeMenu.visible = !beaconNodeMenu.visible
		return
	$AnimatedSprite2D.play(\"default\")
